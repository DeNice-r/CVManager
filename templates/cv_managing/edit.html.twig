{% extends 'base.html.twig' %}

{% block content %}
    {% if is_granted('ROLE_USER') %}
    <h1>  </h1>
    <form class="col-6" method="post" action="edit?cvid={{cvid}}" accept-charset="UTF-8">
        <input type="hidden" name="isSubmitted" value="1">
        <input type="hidden" name="cvid" value="{{ cvid }}">
        <div class="form-group">
            <label for="name">Назва</label>
            <input class="form-control" type="text" id="name" name="name" value="{{ cv.getName() ?? "" }}">
        </div>
        <div class="form-group">
            <label for="position">Посада</label>
            <input class="form-control" type="text" id="position" name="position" value="{{ cv.getPosition ?? "" }}">
        </div>
        <div class="form-group">
            <label for="text">Текст</label>
            <textarea class="form-control" type="text" id="text" name="text">{{ cv.getText() ?? "" }}</textarea>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Зберегти">
        </div>
    </form>
    {% endif %}
{% endblock %}